#! /bin/sh

sxhkd &
sh ~/.config/polybar/launch.sh >> /dev/null &


# Single/Dual monitor config
run=1
per=10          # number of desktops per monitor

# If dual monitor use pair for one, and even for another
if [ $MONITORS -gt 1 ]; then
   for monitor in `xrandr | grep " connected " | awk '{ print$1 }'`; do
      echo 'Monitor ' + $monitor ' has ' +  `seq $run 2 $per`
      bspc monitor $monitor -d `seq $run 2 $per`
      ((run++))
   done
else
   monitor=`bspc query -M`
   bspc monitor $monitor -d `seq $per`
fi

bspc config border_width         2
bspc config window_gap          12

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true
#bspc config focus_by_distance    true
bspc config focus_follows_pointer true
bspc config pointer_follows_focus true

bspc rule -a Gimp desktop='^8' state=floating follow=on
bspc rule -a Chromium desktop='^2'
bspc rule -a mplayer2 state=floating
bspc rule -a Android state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off


