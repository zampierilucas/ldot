# Reload functions
super + Escape
	"$XDG_CONFIG_HOME"/sxhkd/functions

# Launch terminal
super + Return
	$TERMINAL

# Lauch browser
super + shift + Return
	$BROWSER

# program launcher
super + @space
	rofi -show drun -show-icons -modi drun

# close and kill
super + shift + q
	bspc node -c

# Make window fullscreen
super + f
	bspc {desktop -l next,node -t ~fullscreein}

# Make window float
super + shift + f
	bspc node focused -t {tiled,floating}

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Make a windoww sticky/non-sticky
super + o
	bspc node -g sticky={on,off}

# Increase/descrease gap size
super { ,+ shift }+ z
	bspc config window_gap $(($(bspc config window_gap) {+,-} 3))

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} {1-9,10}

#Restart bspwm
super + shift + r
	bspc wm -r

# expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Block computer
super + l
	betterlockscreen -l dim




